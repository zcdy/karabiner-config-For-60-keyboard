{
    "title": "Amilo VSG49 karabiner rules ADD",
    "rules": [
        {
            "description": "volume control Prtsc-Scrlk+PausePause",
            "manipulators": [
                {
                    "from": {
                        "key_code": "print_screen"
                    },
                    "to": [
                        {
                            "key_code": "volume_decrement"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "scroll_lock"
                    },
                    "to": [
                        {
                            "key_code": "volume_increment"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "pause"
                    },
                    "to": [
                        {
                            "key_code": "mute"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
      "description": "Change hold esc to fn,tap to esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "fn"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
        {
            "description": "Change hold right_option to fn,tap to delete_or_backspace",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_option"
                    },
                    "to": [
                        {
                            "key_code": "fn"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}